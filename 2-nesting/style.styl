
// =========
// VARIABLES
// =========

par-font-size = 30px

white = #fff
sec1-color = #e56e89
sec2-color = #e56ed1
sec3-color = #806ee5



// ======
// GLOBAL
// ======

body
  margin: 0

  &::before
    content: 'Generated by Stylus'
    position: fixed
    top: 5px
    left: 5px
    font-size: 20px
    font-weight: 700

img
  display: block

.cont
  width: 900px
  padding: 30px
  margin: 0 auto

.landing-sec
  min-height: 100vh
  display: flex
  align-items: center

.btn
  font-size: 20px
  border: 0
  background-color: #8fd7ed
  border-radius: 15px
  padding: 15px
  font-size: 30px
  text-transform: uppercase
  font-weight: 700
  color: #f3efc7
  text-shadow: 0 0 2px #000
  margin: 15px auto 0
  display: block
  cursor: pointer
  outline: 0

  &.disabled
    color: #bbb
    background-color: #ddd

  &:hover
    box-shadow: 0 0 30px #555

    &.disabled
      box-shadow: none
      cursor: not-allowed



// ==============
// HEADER SECTION
// ==============

.sec-header
  background-color: sec1-color

  .heading
    font-size: 100px
    text-align: center

  p
    font-size: par-font-size
    color: white



// ==================
// ADVANTAGES SECTION
// ==================

.sec-advantages
  background-color: sec2-color

  .heading
    font-size: 100px
    text-align: center
    margin-bottom: 30px

  .icons
    display: flex
    justify-content: space-evenly

    img
      margin: 0 auto

    p
      padding: 20px
      font-size: 20px
      color: white
      text-align: center



// ================
// CONTACTS SECTION
// ================

.sec-contacts
  background-color: sec3-color

  .heading
    font-size: 100px
    text-align: center
    margin-bottom: 30px

  iframe
    margin-bottom: 30px

  p
    font-size: par-font-size
    color: white
